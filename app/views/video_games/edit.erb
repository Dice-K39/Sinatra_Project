<h2>Editing: </h2>
<br><br>
<p>
    <form method='post' action='/video_games/<%= @video_game.id %>'>
        <input type='hidden' name='_method' value='patch'>
        <table>
            <tr>
                <td>Title: </td>
                <td><input type='text' name='title' value="<%= @video_game.title %>" required></td>
            </tr>
            <tr>
                <td>Developer: </td>
                <td><input type ='text' name='developer' value="<%= @video_game.developer %>" required></td>
            </tr>
            <tr>
                <td>Date Purchased: </td>
                <td><input type='date' name='date_purchased' value="<%= @video_game.date_purchased %>" required></td>
            </tr>
            <tr>
                <td>Description: </td>
                <td><textarea name='description' required><%= @video_game.description %></textarea></td>
            </tr>
        </table>
        <br><br>
        <input type='submit' value='Edit Listing'>
    </form>
</p>